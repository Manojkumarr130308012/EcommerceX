<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_3"
    tools:context=".activity.category.CategoryTags">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- custom toolbar -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:contentInsetStartWithNavigation="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tags"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_60" />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Choose your\nfavourite tags"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                        android:textColor="@color/overlay_dark_90" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="@string/topics_sub"
                            android:textAlignment="center"
                            android:textColor="@color/grey_60"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mlarge"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_mlarge"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="US"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Business"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Art"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Technology"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Politics"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />


                    <Button
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Healt"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Auto"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Food"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Entertain"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />


                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Lifestyle"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Football"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="UK"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Style"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />


                    <Button
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Cryptocurrency"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Books"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />


                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="IT"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Animals"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                    <Button
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_rounded_purple_outline"
                        android:drawableEnd="@drawable/ic_add_purple"
                        android:drawableRight="@drawable/ic_add_purple"
                        android:onClick="btToggleClick"
                        android:paddingLeft="@dimen/spacing_mlarge"
                        android:paddingRight="@dimen/spacing_mlarge"
                        android:text="Media"
                        android:textAllCaps="false"
                        android:textColor="@color/purple_200" />

                </com.google.android.flexbox.FlexboxLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_mlarge"
                    android:layout_marginRight="@dimen/spacing_mlarge"
                    android:layout_marginBottom="@dimen/spacing_xxxlarge"
                    app:cardBackgroundColor="@color/purple_400"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:text="Continue"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:textColor="@color/overlay_light_90">

                    </Button>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>